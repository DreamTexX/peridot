{
  "compilerOptions": {
    "experimentalDecorators": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "no-cond-assign",
        "no-await-in-loop",
        "explicit-module-boundary-types",
        "explicit-function-return-type",
        "default-param-last"
      ]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true
    }
  }
}
